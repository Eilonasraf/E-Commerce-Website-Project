<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.reflowhq.com/v1/toolkit.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600&amp;display=swap">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md">
        <div class="container"><a class="navbar-brand" href="#">Brand</a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/">Products</a></li>
                </ul><a class="btn btn-primary ms-auto" role="button" href="/cart">See Cart</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if (Array.isArray(cartItems) && cartItems.length > 0) { %>
            <% cartItems.forEach(item => { %>
                <p><%= item.name %> 
                    <a href="/cart/remove/<%= item._id %>" class="btn btn-danger btn-sm">Remove</a>
                </p>
            <% }); %>            
        <% } else { %>
            <p>Your shopping cart is empty.</p>
        <% } %>                 


        <form method="POST" action="/checkout" style="margin-bottom: 16px;"> 
            <button type="submit" class="btn btn-primary">Checkout</button>
        </form>    
        <button onclick="location.href='/'" class="btn btn-primary mb-3">Return to Home</button>
        
    </div>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdn.reflowhq.com/v1/toolkit.min.js" data-reflow-store="267418190"></script>
    <script src="assets/js/bs-init.js"></script>
</body>

</html>
