<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Order history</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.reflowhq.com/v1/toolkit.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;600&amp;display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md">
        <div class="container">
            <a class="navbar-brand" href="#">Brand</a>
        </div>
    </nav>
    <div class="container">
        <h1>Users History Orders</h1>

        <% if(ordersByUser && Object.keys(ordersByUser).length > 0) { %>
            <% for (const username in ordersByUser) { %>
                <div class="user-orders-section">
                    <h2>Orders for <%= username %></h2>
                    <% ordersByUser[username].forEach(order => { %>
                        <div class="order">
                            <h3>Order ID: <%= order._id %></h3>
                            <h4>Products:</h4>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li><%= product.name %> - <%= product.price %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        <% } else { %>
            <p>No orders available.</p>
        <% } %>
    </div>
    
    
    </div>
    
    <button class="btn btn-dark" onclick="location.href='/'">
        <i class="fas fa-home"></i> Return to Home
    </button>

    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdn.reflowhq.com/v1/toolkit.min.js"></script>
    <script src="assets/js/bs-init.js"></script>
</body> 

</html>